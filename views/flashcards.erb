<script src="/javascripts/flashcards.js"></script>
<div class="main">
  <article class="card">
    <p id="term"><%= @term%></p>
    <p id="definition" class="hide"><%= @definition %></p>
  </article>
  <nav class="card-controls">
    <% if @previous_card_link %>
      <a href="<%= @previous_card_link %>">PREVIOUS</a>
    <% else %>
      <a></a>
    <% end %>
    <a href="<%= @flip_link %>">FLIP</a>
    <% if @next_card_link %>
      <a href="<%= @next_card_link %>">NEXT</a>
    <% else %>
      <a></a>
    <% end %>
  </nav>
</div>
