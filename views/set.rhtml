<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= @title %></title>
  </head>
  <body>
    <main>
    <aside>
      <nav>
        <h1>Sets</h1>
        <ul>
        <% @set_names.each_with_index do |name, index| %>
          <li><a href="/0/<%= index %>"><%= name %></a></li>
        <% end %>
        </ul>
      </nav>
    </aside>
    <article>
      <h1><%= @title %></h1>
      <dl>
      <% @cards.each do |term, definition| %>
        <dt><%= term %></dt>
        <dd><%= definition %></dd>
      <% end %>
      </dl>
    </article>
    </main>
  </body>
</html>
