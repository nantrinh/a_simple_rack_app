<article class="main set">
  <form action="/sets" method="post" class="create-set">
    <p>
    <label for="set_name">Title</label>
    <input name="set_name" value=<%= @title %> type="text" autocomplete="off">
    </p>
    <p>
    <label for="cards_text_box" class="large-text-box">Input your data here.</label>
    <textarea name="cards_text_box" class="large-text-box" autocomplete="off" rows="25" columns="500"><%== @cards %></textarea>
    </p>
    <button class="button" type="submit">Save and Exit</button>
  </form>
</article>
